@model UserViewModel
@{
    ViewData["Title"] = "Add User";
    ViewBag.Title = "Add User";
}
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-6 col-md-offset-3">
    <div class="well">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            
           
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            
            <div class="form-group">
                <button class="btn btn-success" type="submit" value="Save User">
                    <i class="fa fa-user-plus">Save User</i>
                </button>

                <button class="btn btn-danger" type="reset" value="Reset">
                <i class="fa fa-trash">Reset</i>
                </button>
            </div>

           
        </form>
    </div>
   
</div>







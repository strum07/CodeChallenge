<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - ShipBob Challenge</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>


<div class="navbar navbar-inverse">
    <header class="container">
        <div class="navbar-header">
            <div class="navbar-brand"><i class="fa fa-ravelry fa-spin"></i>Shipbob Code Challenge</div>
            <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776;</button>
        </div>
        
        <div id="menu" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="AddUser">Add User</a></li>
                <li><a asp-controller="App" asp-action="CreateOrder">Create Order</a></li>
                <li><a asp-controller="App" asp-action="UserOrders">View User Orders</a></li>
            </ul>
        </div>



    </header>
</div>

<section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>



    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
<footer class="container">
    <div class="text-center">
        Submission by Sagar Sudhakar
    </div>
</footer>
</body>
</html>
